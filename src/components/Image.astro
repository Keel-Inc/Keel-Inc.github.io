---
import { Image as AstroImage } from 'astro:assets';

interface Props {
  src: any;
  alt: string;
  title?: string;
  class?: string;
  [key: string]: any;
}

const { src, alt, title, class: className, ...rest } = Astro.props;

// Combine default responsive classes with any custom classes
const imageClasses = [
  'max-w-full',
  'h-auto',
  'block',
  'mx-auto',
  className
].filter(Boolean).join(' ');
---

<AstroImage 
  src={src} 
  alt={alt} 
  title={title || alt} 
  class={imageClasses}
  {...rest} 
/>
